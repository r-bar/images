{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 9am on monday"
  ],
  "timezone": "America/Los_Angeles",
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "automerge": false,
  "labels": [
    "dependencies",
    "renovate"
  ],
  "commitMessagePrefix": "chore(deps): ",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update opencode version in docker-bake.hcl",
      "managerFilePatterns": [
        "/^docker-bake\\.hcl$/"
      ],
      "matchStrings": [
        "OPENCODE_VERSION\\s*=\\s*\\\"v(?<currentValue>[^\\\"]+)\\\""
      ],
      "depNameTemplate": "anomalyco/opencode",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "anomalyco/opencode"
      ],
      "addLabels": [
        "opencode"
      ],
      "commitMessageTopic": "opencode {{newValue}}"
    }
  ]
}
